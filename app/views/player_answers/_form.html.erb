<%= simple_form_for(@player_answer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :player_group_id %>
    <%= f.input :survey_id %>
    <%= f.input :question_id %>
    <%= f.input :answer_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t(:cancel), :back, class: 'cancel-form-link' %>
  </div>
<% end %>
