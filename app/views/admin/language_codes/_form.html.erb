<%= simple_form_for(@admin_language_code) do |f| %>
    <%= render 'shared/form_errors', object: @admin_language_code %>

    <div class="form-inputs">
      <%= f.input :name %><br>
      <%= f.input :code %><br>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
      <%= link_to t(:cancel), :back, class: 'cancel-form-link' %>
    </div>

<% end %>
