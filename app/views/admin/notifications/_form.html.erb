<%= simple_form_for(@admin_notification) do |f| %>
  <%= render 'shared/form_errors', object: @admin_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :language_code_id, collection: LanguageCode.all, label_method: :label, value_method: :id, prompt: t(:please_select) %>
    <%= f.input :title %>
    <%= f.input :email_content %>
    <%= f.input :facebook_content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t(:cancel), :back, class: 'cancel-form-link' %>
  </div>

<% end %>
