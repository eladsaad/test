<h1><%= t('activerecord.models.campaign') %></h1>


<% [:name, :max_views, :views, :clicks, :trophy_name, :landing_page].each do |attribute| %>
  <p>
    <strong><%= t("activerecord.attributes.campaign.#{attribute}") %>:</strong>
    <%= @admin_campaign.send(attribute) %>
  </p>
<% end %>


<% [:banner_image, :website_banner_html_01, :website_banner_html_02, :website_banner_html_03, :website_banner_html_04, :website_banner_html_05,
    :website_banner_html_06, :website_banner_html_07, :website_banner_html_08, :website_banner_html_09, :website_banner_html_10].each do |attribute| %>
  <p>
    <strong><%= t("activerecord.attributes.campaign.#{attribute}") %>:</strong>
    <code><%= h @admin_campaign.send(attribute) %></code>
  </p>
<% end %>

<%= render 'associations_table', objects: @admin_campaign.campaign_operator_programs %>

<br>
<%= link_to t(:edit), edit_admin_campaign_path(@admin_campaign), class: 'edit-record-link' %>
<%= link_to t(:back_to_list), admin_campaigns_path, class: 'back-to-list-link' %>