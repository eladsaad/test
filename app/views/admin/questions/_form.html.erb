<%= simple_form_for(@admin_question) do |f| %>
    <%= render 'shared/form_errors', object: @admin_question %>

  <div class="form-inputs">
    <%= render 'question_fields', f: f %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t(:cancel), :back, class: 'cancel-form-link' %>
  </div>

<% end %>
