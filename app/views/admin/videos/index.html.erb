<h1><%= t('activerecord.models.videos') %></h1>

<table class="records-table">
  <thead>
    <tr>
      <th><%= sortable_column :Url, t('activerecord.attributes.video.url') %></th>
      <th><%= sortable_column :thumbnail_url, t('activerecord.attributes.videos.thumbnail_url') %></th>
      <th><%= sortable_column :name, t('activerecord.attributes.videos.name') %></th>
      <th><%= sortable_column :language_code, t('activerecord.attributes.videos.language_code') %></th>
      <th><%= sortable_column :description, t('activerecord.attributes.videos.description') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_videos.each do |admin_video| %>
      <tr>
        <td><%= admin_video.url %></td>
        <td><%= admin_video.thumbnail_url %></td>
        <td><%= admin_video.name %></td>
        <td><%= admin_video.language_code.code %> (<%= admin_video.language_code.name %>)</td>
        <td><%= admin_video.description %></td>
        <td><%= link_to 'Show', admin_video %></td>
        <td><%= link_to 'Edit', edit_admin_video_path(admin_video) %></td>
        <td><%= link_to 'Destroy', admin_video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_admin_video_path %>
