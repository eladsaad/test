<%= simple_form_for(@admin_video) do |f| %>
  <%= render 'shared/form_errors', object: @admin_video %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url %>
    <%= f.input :language_code_id, collection: LanguageCode.all, label_method: :label, value_method: :id, prompt: t(:please_select) %>
    <%= f.input :thumbnail_url %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
