<%= simple_form_for(@admin_image) do |f| %>
  <%= render 'shared/form_errors', object: @admin_image %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.input :thumbnail_url %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :format %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t(:cancel), :back, class: 'cancel-form-link' %>
  </div>
<% end %>
