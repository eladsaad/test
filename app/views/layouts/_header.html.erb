  <div class="container">
    <div class="navbar-header">
      <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span class="navbar-brand"><%= t(:main_title) %></span>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <!-- add links -->
      </ul>
      <% if player_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <% if current_player.profile_picture %>
                <%= image_tag current_player.profile_picture, class: 'profile-photo-icon', size: '30x30' %>
              <% else %>
                <%= current_player.full_name %>
              <% end %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:sign_out), destroy_player_session_path, :method => :delete %></li>
            </ul>
          </li>
        </ul>
      <% end %>
