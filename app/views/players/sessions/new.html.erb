<!-- SIGN IN PAGE -->
<h1><div>SIGN IN</div></h1>
<p>or <%= link_to "create an account", new_registration_path(resource_name) %></p>
<br/><br/><br/>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <!--[if lt IE 9]>
  <div class="ie7-fix">
  <![endif]-->

  <%= f.text_field :email, autofocus: true, placeholder: "EMAIL" %>

  <div id="password-area">
    <%= f.password_field :password, id: 'login-password', placeholder: "PASSWORD"  %>
    <br><p></p> <!-- IE fix -->
    <%= link_to 'I forgot my password', new_password_path(resource_name) %>
  </div>

  <!--[if lt IE 9]>
  </div>
  <![endif]-->

  <%= f.submit t(:sign_in).upcase, id: 'login-btn', class: 'button' %>
<% end %>