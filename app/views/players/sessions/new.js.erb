$("#main-content").html('<%= escape_javascript(render partial: "new") %>');
$('#flash_messages').html('<%= escape_javascript(render partial: "shared/flash_messages", flash: flash) %>');

$('.banner').hide();
$('.points-view').hide();
$('.footer').hide();

$('a').click(function() {
    window.loadRemoteScript = false;
    History.pushState({}, '', $(this).attr("href"));
});

$('#new-session-form').bind("ajax:error", function (event, data, status, xhr) {
    $('.error-msg').html(data.responseText);
    $('.error-msg').show();
});