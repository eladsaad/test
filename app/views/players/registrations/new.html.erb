<h2><%= t(:create_an_account) %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <% if params[:reg_code] %>
    <%= hidden_field_tag :reg_code, params[:reg_code] %>
  <% else %>
    <div class="field">
      <%= label_tag :reg_code %><br>
      <%= text_field_tag :reg_code %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :age %><br>
    <%= f.select  :age, 8..20 %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :autocomplete => "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit t(:next) %>
  </div>

<% end %>
