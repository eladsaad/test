<h1>Surveys Report</h1>

<%	 @report[:surveys].each do |survey| %>
    <h2><%= survey[1][:survey_name] %></h2>
    <h3>
      Questions:
    </h3>
    <%-survey[1][:questions].each do |question|  %>
        <h4><%= question[1][:name] %></h4>
            <h5>
              Answers with statistics:
            </h5>
            <%- question[1][:answers].each do |answer|%>
            <h6>
              Answer Number <%=answer[1]["answer_number"]%> : <%= answer[1]["answer_text"] %> - Amount of players chose this answer: <%= answer[1]["answer_count"] %> | <%= (answer[1]["answer_count"].to_f / question[1][:total_answers].to_f * 100).round(2) %> %
            </h6>
            <% end %>
    <% end %>
<% end %>