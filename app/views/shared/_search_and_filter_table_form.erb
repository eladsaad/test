<%= form_tag objects_index_path, method: 'get', class: 'form-inline' do %>

		<%= hidden_field_tag :direction, params[:direction] %>
		<%= hidden_field_tag :sort, params[:sort] %>

		<div class="form-group">
			<%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Search Text" %>
		</div>

		<div class="form-group">
			<%= text_field_tag "#{filter_attribute}_from", params["#{filter_attribute}_from"],
						placeholder: t(:date_form), class: 'form-control datepicker' %>
		</div>

		<div class="form-group">
			<%= text_field_tag "#{filter_attribute}_to", params["#{filter_attribute}_to"],
						placeholder: t(:date_to), class: 'form-control datepicker' %>
		</div>

		<%= submit_tag t(:filter), :name => nil %>

<% end %>